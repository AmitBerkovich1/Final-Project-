@{
}

<form method="post" asp-action="Edit" asp-route-id="@Model.id">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label asp-for="name">Name</label>
        <input asp-for="name" class="form-control" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label asp-for="headquarters">headquarters</label>
        <input asp-for="headquarters" class="form-control" placeholder="Enter description">
    </div>
    <div class="form-group">
        <select asp-for="businessId">
            <option value="">-- Select Line Of Business --</option>
            @foreach (var item in Model.lines)
            {
                <option value="@item.id">@item.title</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

